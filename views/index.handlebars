<div class="col-xl-10 col-lg-12 col-md-9">
<div class="card o-hidden border-0 shadow-lg my-5">
<div class="card-body p-0">
    <div class="row">


    <div class="col-6 offset-3">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Youtube url to download</h1>
                </div>
                    <div class="form-group">
                        <input type="text" id="url" class="form-control form-control-user" placeholder="Enter valid url">
                    </div>

                    <button class="btn btn-primary btn-user btn-block js-download">
                        Download
                    </button>
                    <hr>

                <hr>
            </div>
    </div>
    </div>


</div>
</div>
</div>


{{#section 'script'}}

<script type="application/javascript">


let postUrl = url => {
    console.log(url);
    $.post('/download', {url: url}).then(res => {
        console.log(res);
    }).catch(err => {
        console.error(err);
    })
}

$(document).ready(function() {
    $('.js-download').on('click', function() {
        let url = $('#url').val();
        if (!url) {
            alert('Enter url');
            return false;
        }

        postUrl(url);
    })
})
</script>

{{/section}}